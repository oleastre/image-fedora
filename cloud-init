#cloud-config

# Set the default user
system_info:
  default_user:
    name: sysadmin

groups:
  - sysadmin: sysadmin
  - wheel: sysadmin

# Unlock the default user
chpasswd:
  list: |
     sysadmin:$ys4dm!n
  expire: False

# Other settings
growpart:
    mode: auto
    devices: ["/"]
resize_rootfs: True
ssh_pwauth: True
timezone: Europe/Brussels

# Add any ssh public keys
ssh_authorized_keys:
 - ssh-rsa  olivier@oleastre.be

# For pexpect to know when to log in and begin tests
final_message: "SYSTEM READY TO LOG IN"
